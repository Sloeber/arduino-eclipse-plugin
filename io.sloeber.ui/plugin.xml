 <extension point="org.eclipse.ui.themes">
 <themeElementCategory
      id="io.sloeber.themeCategory"
      label="Sloeber">
</themeElementCategory>
<themeElementCategory
      id="io.sloeber.plotter.themeCategory"
      label="Plotter"
      parentId="io.sloeber.themeCategory">
<description>
Fonts and colors used by the sloeber plotter view
</description>
</themeElementCategory>
<themeElementCategory
      id="io.sloeber.serialMonitor.themeCategory"
      label="Serial monitor"
      parentId="io.sloeber.themeCategory">
<description>
Fonts and colors used by the arduino eclipse plugin serial monitor view
</description>
</themeElementCategory>
<colorDefinition categoryId="io.sloeber.plotter.themeCategory" id="io.sloeber.plotter.color.background" label="Background color" value="COLOR_BLACK">
