         </property>
      </product>
   </extension>
      <extension
         id="io.sloeber.product.intro"
         point="org.eclipse.ui.intro">
      <intro
            class="org.eclipse.ui.intro.config.CustomizableIntroPart"
            id="io.sloeber.product.intro">
      </intro>
      <introProductBinding
            introId="io.sloeber.product.intro"
            productId="io.sloeber.product">
